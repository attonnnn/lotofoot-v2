{# src/Lotofootv2/Bundle/Resources/views/Hello/login.html.twig #}
{% extends 'Lotofootv2Bundle::layout_login.html.twig' %}

{% block title %}
	Inscription au Lotofoot v2 !
{% endblock %}

{% block body %}
		<div class="login-box">
		<div class="login-top">
		</div>
		<div class="login-bottom">
		
		{% if error is defined and error is not null %}
	        <div style="color:red">{{ error }}</div>
	    {% endif %}
		
		<form action="{{ path('_register_post') }}" method="post" class="form form-horizontal">
			<div class="control-group">
				<label class="control-label" for="_username">
					 Nom d'utilisateur <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						 <input type="text" id="_username" name="username" value="{{ app.request.get('username') }}" placeholder="Nom d'utilisateur" style="width:180px"/>
					 </div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="_mail">
					 Email <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						 <input type="text" id="_mail" name="mail" value="{{ app.request.get('mail') }}" placeholder="Mail" style="width:180px"/>
					 </div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="_password">
					 Mot de passe <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						 <input type="password" id="_password" name="pass1" value="{{ app.request.get('pass1') }}" style="width:180px"/>
					 </div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="_password2">
					 Mot de passe (vérification) <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						 <input type="password" id="_password2" name="pass2" value="{{ app.request.get('pass2') }}" style="width:180px"/>
					 </div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="_whoru">
					Qui êtes vous ? <br/>(inscription modérée) <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						 <textarea id="_whoru" name="whoru" rows="2">{{ app.request.get('whoru') }}</textarea>
					 </div>
				</div>
			</div>
			
			<div class="control-group" style="padding-top:20px">
				<div class="controls">
					<button type="submit" class="btn-admin" value="Créer login">Créer son identifiant LotoFoot</button>	
				</div>
			</div>
			
			<div style="clear:both"> </div>
			<br/><br/>
			
		</form>
	</div>
{% endblock %}