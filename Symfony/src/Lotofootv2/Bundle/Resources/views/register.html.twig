{# src/Lotofootv2/Bundle/Resources/views/Hello/login.html.twig #}
{% extends 'Lotofootv2Bundle::layout_login.html.twig' %}

{% block title %}
	Inscription au Lotofoot v2 !
{% endblock %}

{% block body %}

<div class="row">
    <div class="container-login">
    	<div style="text-align:center;">
           <a href="{{ path('_home') }}" title="Aller à la page d'accueil"><img  class="logo" src="{{ asset('bundles/lotofootv2/img/logo-lotofoot2018.png') }}"/></a>
        </div>
        
        <div class="register-box-bottom">	           
        	<div class="row"> 
            
            	{% if error is defined and error is not null %}
    				<div class="error2018">{{ error }}</div><br/>
				{% endif %}

				<form action="{{ path('_register_post') }}" method="post" >

					<label class="control-label" for="_username">
					 Nom d'utilisateur  * 
					</label><br/>
					<input type="text" id="_username" name="username" value="{{ app.request.get('username') }}" placeholder="Nom d'utilisateur" class="input-label"   /><br/><br/>

		
					<label class="control-label" for="_password">
						 Mot de passe  * 
					</label><br/>
	   			    <input type="password" id="_password" name="pass1" value="{{ app.request.get('pass1') }}" class="input-label"  /><br/><br/>

					<label class="control-label" for="_password2">
						 Mot de passe (vérification)  * 
					</label><br/>
					<input type="password" id="_password2" name="pass2" value="{{ app.request.get('pass2') }}" class="input-label" /><br/><br/>


					<label class="control-label" for="_mail">
						 Email * 
					</label><br/>					
					<input type="text" id="_mail" name="mail" value="{{ app.request.get('mail') }}" placeholder="Mail" class="input-label" /><br/><br/>
		
					<label class="control-label" for="_whoru" >
					Qui vous a parrainé ? <br/>(inscription modérée)  * 
					</label><br/>
					<textarea id="_whoru" name="whoru" rows="2" class="input-label" >{{ app.request.get('whoru') }}</textarea><br/><br/>
		
		 
		          	 <button type="submit" class="push_button red" style="margin:0" value="Créer login">Créer son compte</button>
     
        </form>
        </div>
       </div>
 </div>
  </div>


{% endblock %}