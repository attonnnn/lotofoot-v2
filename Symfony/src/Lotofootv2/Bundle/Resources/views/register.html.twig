{# src/Lotofootv2/Bundle/Resources/views/Hello/login.html.twig #}
{% extends 'Lotofootv2Bundle::layout.html.twig' %}

{% block title %}
	Inscription au Lotofoot v2 !
{% endblock %}

{% block body %}
	<div style="padding-top:100px;margin:auto;width:550px" class="well">
		
		{% if error is defined and error is not null %}
	        <div style="color:red">{{ error }}</div>
	    {% endif %}
		
		<form action="{{ path('_register_post') }}" method="post" class="form form-horizontal">
			<div class="control-group">
				<label class="control-label" for="_username">
					 Nom d'utilisateur <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on">
							<i class="icon-user"></i>
						</span>
						 <input type="text" id="_username" name="username" value="{{ app.request.get('username') }}" placeholder="Nom d'utilisateur"/>
					 </div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="_mail">
					 Email <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on">
							<i class="icon-lock"></i>
						</span>
						 <input type="text" id="_mail" name="mail" value="{{ app.request.get('mail') }}"/>
					 </div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="_password">
					 Mot de passe <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on">
							<i class="icon-lock"></i>
						</span>
						 <input type="password" id="_password" name="pass1" value="{{ app.request.get('pass1') }}"/>
					 </div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="_password2">
					 Mot de passe (vérification) <span style="color:red"> * </span> 
				</label>
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on">
							<i class="icon-lock"></i>
						</span>
						 <input type="password" id="_password2" name="pass2" value="{{ app.request.get('pass2') }}"/>
					 </div>
				</div>
			</div>
			
			<div class="control-group">
				<div class="controls">
					<button type="submit" class="btn" value="">Créer</button>	
				</div>
			</div>
			
		</form>
	</div>
{% endblock %}