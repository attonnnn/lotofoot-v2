{# src/Lotofootv2/Bundle/Resources/views/Hello/login.html.twig #}
 {% extends 'Lotofootv2Bundle::layout_login.html.twig' %}

{% block title %}
	Connexion au Lotofoot !
{% endblock %}

{% block body %}
    
    <div class="container">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
                <div>                
                <!-- errors -->
	                {% if error %}
	                <div class="error">{{ error.message }}</div>
		            {% endif %}
		            {% if registered %}
		                <div>Votre inscription a bien été prise en compte et votre compte est en cours d'activation par les administrateurs</div>
		                <br/>
		            {% endif %}
		            {% if recovered %}
		                <div>Votre mot de passe vient de vous être envoyé par email</div>
		                <br/>
		            {% endif %}
	            </div>
	            
	            <!-- box -->
	            <!-- top -->
	            <div>
	               <img src="{{ asset('bundles/lotofootv2/img/login-logo.jpg')}}" class="img-responsive" style="display:inline;width:100%"/>
	            </div>
	            <!-- bottom -->
	           <div class="login-box-bottom">	           
	          
	               <form action="{{ path('_login_check') }}" method="post" >
	               
		               <div class="row"> 
		               
		               	<div class="col-sm-6">
		               	
		               		<div class="login-field">
							    <label for="_username">Pseudo</label>
							    <input type="text" id="_username" name="_username" value="{{last_username}}" placeholder="Nom d'utilisateur" class="form-control input-sm"/>
							</div>
							
							<div class="login-field">
	                            <label class="control-label" for="_pass">Mot de passe </label>
	                            <input type="password" id="_password" name="_password" class="form-control input-sm" />
	                        </div>
		           
		                    <input type="hidden" name="_target_path" value="/home" />
		               	</div>
		               	
		               	<div class="col-sm-6">
		               		<div class="login-connexion">
		               			<button type="submit" class="btn btn-default login-btn-connexion" value="">Connexion au LotoFoot</button>
							</div>
		               		<div class="login-link">
		               			<a href="{{path('_register')}}">Créer un compte</a><br/>
		               			<a href="{{path('_password_lost')}}">Mot de passe oublié</a>
		               		</div>
		               	</div>
		               	
		               </div>
	              	             
		           </form>
	            </div>
            </div>
        </div>
	</div>
{% endblock %}