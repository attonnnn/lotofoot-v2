{% extends 'Lotofootv2Bundle::layout.html.twig' %}

{% block navibar %}
	{% include 'Lotofootv2Bundle::navibar.html.twig' %}
{% endblock %}

{% block menu %}
	{% include 'Lotofootv2Bundle::menu.html.twig' %}
{% endblock %}

{% block title_body %}
		<div class="title-body">
			<div class="ligne-body-left">&nbsp;</div>
			Classement Coupe du monde	&nbsp;
			<img src="{{ asset('bundles/lotofootv2/img/rewards/r12.png') }}"/>
			<div class="ligne-body-right">&nbsp;</div>
		</div>
{% endblock %}

{% block body %}
	
	<table>
        <tr>
            <th>Rang</th>
            <th>Joueur</th>
            <th>Points</th>
            <th>Matchs pariés</th>
            <th>Scores trouvés</th>
            <th>Resultats trouvés</th>
        </tr>
        {% for account in accounts %}
        <tr class="{% if account.id == app.user.id %}my-rank{% endif %} {% if loop.index % 10 == 0 %} cl-limit {% endif %}" >
            <td>
            {% if account.cupRank == 99 or account.cupRank == 0 %}
                -
            {% else %}
                {{account.cupRank}}
            {% endif %}
            </td>
            <td>{{account.username}} {% if account.cupCagnoute == 1 %} TODO Topich<img src="{{ asset('bundles/lotofootv2/img/picto-cagnoute.png') }}" style="margin-top:2px;"/>{% endif %}</td>
            <td>{{account.cupPoints}}</td>
            <td>{{account.statCupMatchs}}</td>
            <td>{{account.statCupScores}}</td>
            <td>{{account.statCupResults}}</td>
        </tr>
        {% endfor %}
    </table>
	
{% endblock %}

{% block footer %}
	{% include 'Lotofootv2Bundle::footer.html.twig' %}
{% endblock %}