{# src/Lotofootv2/Bundle/Resources/views/Hello/index.html.twig #}
{% extends 'Lotofootv2Bundle::layout_cl.html.twig' %}


{% block navibar %}
	{% include 'Lotofootv2Bundle::navibar.html.twig' %}
{% endblock %}

{% block menu %}
	{% include 'Lotofootv2Bundle::menu.html.twig' %}
{% endblock %}

{% block title_body %}
		<div class="title-body">
			<div class="ligne-body-left">&nbsp;</div>
			Vos Paris Champion's League	&nbsp;
			<img src="{{ asset('bundles/lotofootv2/img/title-cl.png') }}"/>
			<div class="ligne-body-right">&nbsp;</div>
		</div>
{% endblock %}
	
{% block body %}
	
	{% if step.state == "W" %}
	   
	   La liste des matchs va être administrée très prochainement.
	   
	{% else %}
	
		Voici la liste des matchs pour lesquels vous n'aurez <b>pas</b> la chance de pouvoir voter =) :<br/>
		<br/><br/>
	        <table>
	            <tr>
	                <th>N°</th>
	                <th>Domicile</th>
	                <th>Extérieur</th>
	            </tr>
	            {% for match in matches %}
	            <tr  class="vote-cl">
	                <td>
	                    {{match.number}}
	                </td>
	                <td>
                        {{match.teamHome}}
	                </td>
	                <td>
	                    {{match.teamVisitor}}
	                </td>
	            </tr>
	            {% endfor %}
	        </table> 
	{% endif %}
	
	<audio src="{{ asset('bundles/lotofootv2/img/cl-soundtrack.mp3') }}" autoplay></audio>
{% endblock %}

{% block footer %}
	{% include 'Lotofootv2Bundle::footer.html.twig' %}
{% endblock %}
