<div>
     <table  class="board">
         <tr class="board">
             <th>N°</th>
             <th>Domicile</th>
             <th>Extérieur</th>
             <th colspan=2>{{ app.request.get(app.request.get('_acc_1')) }}</th>
             <th colspan=2>{{ app.request.get(app.request.get('_acc_2')) }}</th>
             <th>Score</th>
         </tr>
         {% for match in matchesA %}
         <tr class="vote-board">
             <td>{{match.number}}</td>
             <td>{{match.teamHome}}</td>
             <td>{{match.teamVisitor}}</td>
             <td>{{ app.request.get(match.id~'_result_1') }}</td>
             <td>{{ app.request.get(match.id~'_score_1') }}</td>
             <td>{{ app.request.get(match.id~'_result_2') }}</td>
             <td>{{ app.request.get(match.id~'_score_2') }}</td>
             <td>{{match.score}}</td>
          </tr>            
         {% endfor %}
     </table>
     <br/>
     
     {% if matchesR is defined and matchesR is not null %}
     
