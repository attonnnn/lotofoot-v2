<form action="{{ path('_admin_cl_matchs_create') }}" method="post" style="width:800px;margin:auto">

	<table class="table table-striped" id="match-table">
		<tr>
			<th>
				N°
			</th>
			<th>
				Domicile
			</th>
			<th>
				Extérieur
			</th>
			<th>
			     Minute du 1er but ?
			</th>
		</tr>
		{% for i in 1..8 %}
		<tr class="vote-cl">
			<td>
				{{i}}
			</td>
			<td>
				<input type="text" name="home_{{i}}" value="{{ app.request.get('home_'~i) }}" style="border:0px"/>
			</td>
			<td>
				<input type="text" name="visitor_{{i}}" value="{{ app.request.get('visitor_'~i) }}" style="border:0px"/>
			</td>
			<td>
                <input type="radio" name="is_first_goal" value="{{i}}" style="border:0px" {% if app.request.get('is_first_goal') == i %}checked{% endif %}/>
            </td>
		</tr>
		{% endfor %}
	</table>
	
	<br/>
	<div class="control-group-admin">
		<label class="control-label" for="_deadline">
			 Dernier délai le <span style="color:red"> * </span> 
		</label>
		<div class="controls">
			 <input type="text" id="_deadline" name="deadline" value="{{ app.request.get('deadline') }}" placeholder="jj/mm/aaaa"/>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="_deadlineh">
			 à <span style="color:red"> * </span> 
		</label>
		<div class="controls">
			 <input type="text" id="_deadlineh" name="deadlineh" value="{{ app.request.get('deadlineh') }}" placeholder="hh:mm"/>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			 <input type="submit" class="btn-admin" value="Lancer !"/>
		</div>
	</div>

</form>