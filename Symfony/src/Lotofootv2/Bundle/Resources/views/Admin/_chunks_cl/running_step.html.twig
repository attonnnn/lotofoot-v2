Journée en cours

{% if closed == false %}
    
   <div style="border : 1px solid red">
        Les votes sont toujours en cours !
    </div>
    
{% else %}
    
   <div class="alert alert-info">
       <span class="center">Les votes sont clos ! La journée peut être corrigée</span>
   </div> 
   
   <form action="{{ path('_admin_cl_mark') }}" method="post" style="width:800px;margin:auto">
    
        <table class="table table-striped">
            <tr>
                <th>
                    N°
                </th>
                <th>
                    Domicile
                </th>
                <th>
                    Score
                </th>
                <th>
                    Extérieur
                </th>
            </tr>
            {% for match in matches %}
            <tr>
                <td>
                    {{match.number}}
                </td>
                <td>
                   {% if step.state == "A" %}
                       {{match.teamHome}}
                   {% else %}
                       {{match.teamVisitor}}
                   {% endif %}
                </td>
                <td>
                    <input type="text" name="score_{{match.id}}" size="3" autocomplete="off"  style="border:0px" value="{{app.request.get('score_'~match.id)}}"/>                                                           
                </td>
                <td>
                    {% if step.state == "A" %}
                        {{match.teamVisitor}}
                    {% else %}
                        {{match.teamHome}}
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </table>

        <input type="submit" name="Valider" class="btn-admin center"/>                                      
    
    </form>
    
{% endif %}

