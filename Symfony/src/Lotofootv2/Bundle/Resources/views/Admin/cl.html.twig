{% extends 'Lotofootv2Bundle::layout_cl.html.twig' %}

{% block navibar %}
	{% include 'Lotofootv2Bundle::navibar.html.twig' %}
{% endblock %}

{% block menu %}
	{% include 'Lotofootv2Bundle::menu.html.twig' %}
{% endblock %}

{% block title_body %}
		<div class="title-body">
			<div class="ligne-body-left">&nbsp;</div>
			Admin Champion's League	&nbsp;
			<img src="{{ asset('bundles/lotofootv2/img/title-cl.png') }}"/>
			<div class="ligne-body-right">&nbsp;</div>
		</div>
{% endblock %}

{% block body %}
	
	{% if err is defined and err is not null %}
		<div>ERREUR : ${err}</div>
	{% endif %}
	
	{% if step is null %}
		<b>Aucune ligue des champions trouv√©e !</b>
		
		{% include 'Lotofootv2Bundle:Admin/_chunks_cl:create.html.twig' %}
		
	{% elseif step.state == "W" %}				
			
		{% include 'Lotofootv2Bundle:Admin/_chunks_cl:create_matchs.html.twig' %}	
		
	{% else %}
		
		{% include 'Lotofootv2Bundle:Admin/_chunks_cl:running_step.html.twig' %}
		
	{% endif %}	
	
{% endblock %}

{% block footer %}
	{% include 'Lotofootv2Bundle::footer.html.twig' %}
{% endblock %}