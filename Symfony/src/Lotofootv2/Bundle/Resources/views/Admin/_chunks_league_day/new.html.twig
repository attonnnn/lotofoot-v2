{% if error is defined %}
    <div class="alert alert-error">{{ error }}</div>
{% endif %}

<style type="text/css">
	table.table input{
		margin:0
	}
</style>

<form action="{{ path('_admin_league_day_new') }}" method="post" style="width:800px;margin:auto">

	<table class="table table-striped">
		<tr>
			<th>
				N°
			</th>
			<th>
				Domicile
			</th>
			<th>
				Extérieur
			</th>
			<th>
				Bonus
			</th>
		</tr>
		{% for i in 1..13 %}
		<tr>
			<td>
				{{i}}
			</td>
			<td>
				<input type="text" name="home_{{i}}" value="{{ app.request.get('home_'~i) }}"/>
			</td>
			<td>
				<input type="text" name="visitor_{{i}}" value="{{ app.request.get('visitor_'~i) }}"/>
			</td>
			<td>
				<input type="checkbox" name="bonus_{{i}}" {{app.request.get('bonus_'~i) == 'on' ? 'checked' : ''}}/>
			</td>
		</tr>
		{% endfor %}
	</table>
	
	<div class="control-group">
		<label class="control-label" for="_deadline">
			 Dernier délai le <span style="color:red"> * </span> 
		</label>
		<div class="controls">
			 <input type="text" id="_deadline" name="deadline" value="{{ app.request.get('deadline') }}" placeholder="jj/mm/aaaa"/>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="_deadlineh">
			 à <span style="color:red"> * </span> 
		</label>
		<div class="controls">
			 <input type="text" id="_deadlineh" name="deadlineh" value="{{ app.request.get('deadlineh') }}" placeholder="hh:mm"/>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			 <input type="submit" class="btn" value="Lancer !"/>
		</div>
	</div>

</form>