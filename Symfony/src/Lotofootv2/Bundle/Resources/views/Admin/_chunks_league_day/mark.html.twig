{% if error is defined %}
    <div class="alert alert-error">{{ error }}</div>
{% endif %}

<style type="text/css">
	table.table input{
		margin:0
	}
</style>

{% if closed == true %}

	<div class="alert alert-info">
		<span class="center">Les votes sont clos ! La journée peut être corrigée</span>
	</div>										
	
	{% else %}
	
	<div class="alert alert-warning">
		Les votes sont toujours en cours !
	</div>
	
	<br/></br>
	Les joueurs suivants n'ont pas joué :
	<ul>
		{% for a in hasNotVoted %}
			<li>{{a.username}}</li>
		{% endfor %}
	</ul>
	<br/>
	Mail à envoyer à : 
	{% for a in hasNotVoted %}
		{{a.email}};
	{% endfor %}
	
{% endif %}
<br/>
{% if closed == true %}
	
	<form action="{{ path('_admin_league_day_mark') }}" method="post" style="width:800px;margin:auto">
	
		<table class="table table-striped">
			<tr>
				<th>
					N°
				</th>
				<th>
					Domicile
				</th>
				<th>
					Score
				</th>
				<th>
					Extérieur
				</th>
			</tr>
			{% for match in matches %}
			<tr>
				<td>
					{% if match.bonus == true %}
					<img src="{{ asset('bundles/lotofootv2/img/star.png') }}"/>
					{% endif %}
					{{match.number}}
					{% if match.bonus == true %}
					<img src="{{ asset('bundles/lotofootv2/img/star.png') }}"/>
					{% endif %}
				</td>
				<td>
					{{match.teamHome}}
				</td>
				<td>
					<input type="text" name="score_{{match.id}}" size="3" autocomplete="off"  style="border:0px" value="{{app.request.get('score_'~match.id)}}"/>															
				</td>
				<td>
					{{match.teamVisitor}}
				</td>
			</tr>
			{% endfor %}
		</table>

		<input type="submit" name="Valider" class="btn-admin center"/>										
	
	</form>
	
{% endif %}