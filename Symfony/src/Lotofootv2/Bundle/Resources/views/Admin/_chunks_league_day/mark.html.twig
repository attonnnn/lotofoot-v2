{% if error is defined %}
    <div class="alert alert-error">{{ error }}</div>
{% endif %}

<style type="text/css">
	table.table input{
		margin:0
	}
</style>

{% if closed == true %}

	<div class="alert alert-info">
		Les votes sont clos ! La journée peut être corrigée
	</div>										
	
	{% else %}
	
	<div class="alert alert-warning">
		Les votes sont toujours en cours !
	</div>
	
{% endif %}

<form action="{{ path('_admin_league_day_mark') }}" method="post" style="width:800px;margin:auto">

	<table class="table table-striped">
		<tr>
			<th>
				N°
			</th>
			<th>
				Domicile
			</th>
			<th>
				Score
			</th>
			<th>
				Extérieur
			</th>
		</tr>
		{% for match in matches %}
		<tr>
			<td>
				{{match.number}}
			</td>
			<td>
				{{match.teamHome}}
			</td>
			<td>
				{% if closed %}
					<input type="text" name="score_{{match.id}}" size="3"/>										
				{% endif %}
				
				{% if match.bonus == true %}
					<span style="color:red"> Bonus </span> 
				{% endif %}
			</td>
			<td>
				{{match.teamVisitor}}
			</td>
		</tr>
		{% endfor %}
	</table>

	{% if closed %}
		<input type="submit" name="Valider" class="btn"/>										
	{% endif %}

</form>