{# src/Lotofootv2/Bundle/Resources/views/Hello/login.html.twig #}
{% extends 'Lotofootv2Bundle::layout_login.html.twig' %}

{% block title %}
	Inscription au Lotofoot v2 !
{% endblock %}

{% block body %}

<div class="container">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
	            
	            <!-- box -->
	            <!-- top -->
	            <div>
	               <img src="{{ asset('bundles/lotofootv2/img/login-logo.jpg')}}" class="img-responsive" style="display:inline;width:100%"/>
	            </div>
	            <!-- bottom -->
	           <div class="login-box-bottom">	           
	          
	               <form action="{{ path('_login_check') }}" method="post" >
	               
		               <div class="row"> 
		               
		               	
		               	{% if error is defined and error is not null %}
	        				<div style="color:red">{{ error }}</div>
	    				{% endif %}
		
						<form action="{{ path('_register_post') }}" method="post" class="form form-horizontal">
						<div style="padding:20px 30%;">
			
						<form action="{{ path('_recover_password') }}" method="post" class="form form-horizontal">
							<div class="control-group">
								<label class="control-label" for="_username">
									 Nom d'utilisateur <span style="color:red"> * </span> 
								</label>
								<div class="controls">
									<div class="input-prepend">
										 <input type="text" id="_username" name="username" value="{{ app.request.get('username') }}" placeholder="Nom d'utilisateur" style="width:180px"/>
									 </div>
								</div>
							</div>
							
							<div class="control-group">
								<div class="controls">
									<button type="submit" class="btn-admin">Rappeler par email</button>	
								</div>
							</div>
							
							<div style="clear:both"> </div>
							<br/><br/>
							
						</form>
		               	</div>
		               	
		               </div>
	              	             
		           </form>
	            </div>
            </div>
        </div>
	</div>



{% endblock %}