
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">

	   <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	       <span class="icon-bar"></span>
	       <span class="icon-bar"></span>
	       <span class="icon-bar"></span>
	    </button>
      <div class="navbar-brand">{{'navibar.hello' | trans}} {{ app.user.username }}&nbsp;&nbsp;
      <a href="{{ path('_profile') }}"><img class="navbar-profile" src="{{ asset('bundles/lotofootv2/img/profile-icon.png') }}" title="Mon compte"/></a>&nbsp;&nbsp;
      <a href="{{ path('_logout') }}"><img src="{{ asset('bundles/lotofootv2/img/logo-disconnect.png') }}" title="Déconnexion"/></a>
      </div>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
		<li><div class="navbar-element hidden-xs"><img src="{{ asset('bundles/lotofootv2/img/icon-podium.png') }}" title="Classement"/> : 
			{% if app.user.cupRank == 99 %}
				-
			{% else %}
				{{app.user.cupRank}}
			{% endif %}
			</div>
        	<div class="navbar-element hidden-xs"><img src="{{ asset('bundles/lotofootv2/img/icon-score.png') }}" title="Score"/>  : {{ app.user.cupPoints }}</div>
        	<div class="navbar-element hidden-xs"><img src="{{ asset('bundles/lotofootv2/img/icon-cagnoute.png') }}" title="Cagnoute"/> : {{pot()*10}} €</div>
        </li>
        <li>      
        	<div class="navbar-element nofloat hidden-sm">      	
		        {% for r in rewards(app.user.id)%}
					<img src="{{ asset('bundles/lotofootv2/img/rewards/r'~r.rewardId~'.png') }}" 
						class="tooltip-on"
						title="{{('rewards.r'~r.rewardId~'.desc') | trans}}"
						data-placement="bottom"></img>
				{% endfor %}
		    </div>
		 </li>
      </ul>
	   
    </div><!--/.nav-collapse -->
   </div>
</div>
