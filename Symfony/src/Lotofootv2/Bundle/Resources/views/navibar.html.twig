<div class="navibar">
	<div class="container-navbar">
		<span class="navibar-element">{{'navibar.hello' | trans}} {{ app.user.username }}</span>
		<span class="navibar-element">{{'navibar.ranking' | trans}} : 
			{% if app.user.rank == 99 %}
				-
			{% else %}
				{{app.user.rank}}
			{% endif %}
		</span>
		<span class="navibar-element">{{'navibar.score' | trans}} : {{ app.user.points }}</span>
		<span class="navibar-element">En jeu : {{pot()*10}} â‚¬</span>
		<div class="logo-disconnect" style="width:auto">
			{% for r in rewards(app.user.id)%}
				<img src="{{ asset('bundles/lotofootv2/img/rewards/r'~r.rewardId~'.png') }}" 
					class="tooltip-on"
					title="{{('rewards.r'~r.rewardId~'.desc') | trans}}"
					data-placement="bottom"></img>
			{% endfor %}
			<a href="{{ path('_logout') }}"><img src="{{ asset('bundles/lotofootv2/img/logo-disconnect.png') }}"/></a>
		</div>
	</div>	
</div>	